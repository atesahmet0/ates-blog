---
import { siteConfig, getPageTitle } from '../config/site';

export interface Props {
  title: string;
  description?: string;
  preloadImage?: string;
}

const { title, description, preloadImage } = Astro.props;
const pageTitle = getPageTitle(title);
const pageDescription = description || siteConfig.description;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    {/* Preload critical images */}
    {preloadImage && (
      <link rel="preload" as="image" href={preloadImage} />
    )}
    
    {/* Preload default banner for faster loading */}
    <link rel="preload" as="image" href={siteConfig.blog.defaultBanner} />
    
    {/* Image loading handler */}
    <script is:inline src="/js/image-loader.js"></script>
    
    <title>{pageTitle}</title>
  </head>
  <body>
    <header>
      <nav class="nav-container">
        <a href={siteConfig.nav.home.href} class="logo">{siteConfig.title}</a>
        <div class="nav-links">
          <a href={siteConfig.nav.home.href}>{siteConfig.nav.home.label}</a>
        </div>
      </nav>
    </header>
    
    <slot />
    
    <footer>
      <div class="footer-container">
        <p>&copy; 2025 {siteConfig.footer.copyright}. {siteConfig.footer.builtWith}.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/fonts.css';
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-primary);
    line-height: var(--line-height-relaxed);
  }

  body {
    background: #1a1a1a;
    color: #e4e4e7;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  header {
    background: #1a1a1a;
  }

  .nav-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: #007acc;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: #e4e4e7;
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: #007acc;
  }

  footer {
    background: #1a1a1a;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    text-align: center;
    color: #9ca3af;
  }

  /* Typography styles for MDX content */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: var(--line-height-tight);
    font-weight: var(--font-weight-bold);
  }

  h1 {
    font-size: var(--font-size-4xl);
  }

  h2 {
    font-size: var(--font-size-3xl);
  }

  h3 {
    font-size: var(--font-size-2xl);
  }

  p {
    margin-bottom: 1rem;
  }

  pre {
    font-family: var(--font-mono);
    background: #262626;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid #374151;
  }

  code {
    font-family: var(--font-mono);
    background: #262626;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: var(--font-size-sm);
    color: #fbbf24;
  }

  pre code {
    background: none;
    padding: 0;
  }

  blockquote {
    border-left: 4px solid #007acc;
    margin: 1rem 0;
    padding-left: 1rem;
    color: #9ca3af;
    font-style: italic;
    background: #262626;
    padding: 1rem;
    border-radius: 4px;
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
  }

  ul, ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: #007acc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .logo {
      font-size: var(--font-size-xl);
    }
  }
</style>
