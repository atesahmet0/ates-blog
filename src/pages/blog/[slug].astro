---
import Layout from '../../components/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { siteConfig } from '../../config/site';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props as Props;
const { Content } = await post.render();
const { title, date, description, tags, banner, bannerAlt } = post.data;

// Use default banner if no specific banner is provided
const displayBanner = banner || siteConfig.blog.defaultBanner;
const displayBannerAlt = bannerAlt || `Default banner for ${title}`;
---

<Layout title={title} description={description} preloadImage={displayBanner}>
  <main class="post-content">
    <article>
      <div class="banner-container">
        <img 
          src={displayBanner} 
          alt={displayBannerAlt} 
          class="banner-image"
          loading="eager"
          decoding="async"
          fetchpriority="high"
          onload="this.classList.add('loaded')"
        />
      </div>
      
      <header class="post-header">
        <h1>{title}</h1>
        <div class="post-meta">
          <time datetime={date}>
            {new Date(date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {tags && (
            <div class="tags">
              {tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
        <p class="description">{description}</p>
      </header>
      
      <div class="prose">
        <Content />
      </div>
    </article>
    
    <nav class="post-nav">
      <a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
    </nav>
  </main>
</Layout>

<style>
  .post-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .banner-container {
    margin-bottom: 3rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .banner-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: linear-gradient(90deg, #2a2a2a 25%, #333 50%, #2a2a2a 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }

  .banner-image.loaded {
    opacity: 1;
    animation: none;
    background: none;
  }

  @keyframes loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #374151;
  }

  .post-header h1 {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: 1rem;
    color: #e4e4e7;
    line-height: var(--line-height-tight);
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: var(--font-size-sm);
    color: #9ca3af;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: #007acc;
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
  }
  }

  .description {
    font-size: var(--font-size-lg);
    color: #9ca3af;
    font-style: italic;
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

  .prose {
    line-height: var(--line-height-loose);
    font-size: var(--font-size-lg);
  }

  /* Enhanced typography for blog content */
  .prose :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #e4e4e7;
    border-bottom: 2px solid #374151;
    padding-bottom: 0.5rem;
  }

  .prose :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #d1d5db;
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(ul), .prose :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(blockquote) {
    background: #262626;
    border-left: 4px solid #007acc;
    margin: 2rem 0;
    padding: 1rem 1.5rem;
    font-style: italic;
    color: #9ca3af;
    border-radius: 4px;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: var(--font-size-sm);
    background: #262626;
    border-radius: 8px;
    overflow: hidden;
  }

  .prose :global(th), .prose :global(td) {
    border: 1px solid #374151;
    padding: 0.75rem;
    text-align: left;
  }

  .prose :global(th) {
    background: #374151;
    font-weight: var(--font-weight-semibold);
    color: #e4e4e7;
  }

  .prose :global(td) {
    color: #d1d5db;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    background: #374151;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: var(--font-size-sm);
    color: #fbbf24;
  }

  .prose :global(pre) {
    font-family: var(--font-mono);
    background: #262626;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid #374151;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-nav {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
  }

  .back-to-blog {
    display: inline-flex;
    align-items: center;
    color: #007acc;
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color 0.2s ease;
  }

  .back-to-blog:hover {
    color: #0066cc;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-content {
      padding: 1rem;
    }

    .banner-image {
      height: 200px;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .prose {
      font-size: var(--font-size-base);
    }

    .prose :global(table) {
      font-size: var(--font-size-sm);
    }

    .prose :global(th), .prose :global(td) {
      padding: 0.5rem;
    }
  }
</style>
